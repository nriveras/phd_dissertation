@article{Kleber2007,
	title = {A conceptual model of organo-mineral interactions in soils: self-assembly of organic molecular fragments into zonal structures on mineral surfaces},
	volume = {85},
	issn = {1573-515X},
	url = {https://doi.org/10.1007/s10533-007-9103-5},
